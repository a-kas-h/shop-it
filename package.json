{
  "name": "shopit-monorepo",
  "version": "1.0.0",
  "description": "ShopIt - Product Store Locator Application",
  "scripts": {
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && chmod +x mvnw",
    "install:all": "npm run install:frontend && npm run install:backend",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && ./mvnw spring-boot:run",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && ./mvnw clean package -DskipTests",
    "build": "npm run build:backend && npm run build:frontend",
    "start:backend": "cd backend && java -jar target/shopit-0.0.1-SNAPSHOT.jar",
    "test:integration": "node scripts/test-integration.js",
    "deploy:frontend": "BUILD_TYPE=frontend ./scripts/build.sh",
    "deploy:backend": "BUILD_TYPE=backend ./scripts/build.sh"
  },
  "keywords": ["react", "spring-boot", "store-locator", "ecommerce"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}